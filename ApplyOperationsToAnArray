class Solution:
    def applyOperations(self, nums: List[int]) -> List[int]:
        count = 0
        result = []
        for i in range(len(nums)-1):
            if nums[i] == nums[i+1]:
                nums[i] = nums[i]*2
                nums[i+1] = 0
        for x in nums:
            if x!=0:
                result.append(x)
            else:
                count+=1
        return result + [0]* count


        
