class Solution:
    def matrixSum(self, nums: List[List[int]]) -> int:
        for row in nums:
            row.sort()

        score = 0

        for col in range(len(nums[0])-1, -1, -1):
            max_value = 0
            for row in nums:
                max_value = max(max_value, row[col])
            score += max_value

        return score
